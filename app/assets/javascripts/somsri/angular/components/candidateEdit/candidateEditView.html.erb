<form name="candidateForm" ng-submit="candidate.submit(candidate.data)">
    <div class="form-group">
        <label for="full_name">ชื่อ-สกุล</label>    
        <input type="text" class="form-control" id="full_name" ng-model="candidate.data.candidate.full_name">
    </div>
    <div class="form-group">
        <label for="nick_name">ชื่อเล่น</label>    
        <input type="text" class="form-control" id="nick_name" ng-model="candidate.data.candidate.nick_name">
    </div>
    <div class="form-group">
        <label for="nick_name">อีเมล</label>    
        <input type="text" class="form-control" id="email" ng-model="candidate.data.candidate.email">
    </div>
    <strong>programming_skill</strong><br>
    <div class="form-group">
        <label for="nick_name">skillname</label>    
        <input type="text" class="form-control" id="email" ng-model="candidate.data.programming_skill.skill_name">				
				<select ng-model="candidate.data.programming_skill.skill_point">
					<option value="{{candidate.data.programming_skill.skill_point}}" selected>{{candidate.data.programming_skill.skill_point}}</option>
					<option ng-repeat="value in point" value="{{value.id}}">{{value.value}}</option>
				</select>


    <button type="submit" class="btn btn-custom btn-green btn-block">update</button>
</form>
