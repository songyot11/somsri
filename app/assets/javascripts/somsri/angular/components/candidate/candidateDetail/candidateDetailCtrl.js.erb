(function() {
  'use strict';
    angular.module('somsri.somsri.candidate_detail', [])
    .controller('candidateDetailCtrl', ['$scope', '$rootScope', 'translateFilter','candidateDetailService','$state', function($scope, $rootScope, translateFilter, candidateDetailService, $state) {
      var ctrl = this;
      ctrl.buttonIcon = "fas fa-star color-yellow";
      ctrl.icon = true;
      candidateDetailService.getById($state.params.id).then(function(resp) {
        ctrl.datas = resp.data;
        console.log(ctrl.datas)
      });
     
      ctrl.changIcon = function(check){
        if(check){
          ctrl.buttonIcon = "far fa-star color-yellow";
          ctrl.icon = false;
        }
        else{
          ctrl.buttonIcon = "fas fa-star color-yellow";
          ctrl.icon = true;
        }
      }

      

      


  }]);
})();