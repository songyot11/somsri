<div class="container paper-white">
  <form name="candidateEditForm" ng-submit="candidateEdit.submit(candidateEdit.data)">
    <div class="form-group">
      <div class="img-profile cursor-pointer" id="image" ngf-select="candidateEdit.showImage($event, 'pic')">
        <img src="{{candidateEdit.data.image}}" id="pic" class="img-lg">
      </div>
    </div>

    <strong>files</strong><br>
    <div class="form-group">
      <div ng-repeat="item in candidateEdit.data.candidate_files_attributes">
        <div class="row" ng-hide="item._destroy">
          <div class="col-lg-4">
            <span ng-hide="!item.files_file_name.name">{{ item.files.name }}</span>
            <a ng-show="!item.files_file_name.name" target="_blank" href="{{ candidateEdit.data.candidate_files_url[$index] }}">{{ item.files_file_name }}</a>
          </div>
          <div class="col-lg-2">
            <div class="button btn btn-info" ngf-select="candidateEdit.onFileChange($index, $event)" ng-model="item.files_file_name" name="file">โปรดเลือกไฟล์</div>
          </div>
          <div class="col-lg-2">
            <button type="button" class="btn btn-danger" ng-click="candidateEdit.removeCandidateFiles($index)">Remove</button>
          </div>
        </div>
      </div>
      <button type="button" ng-click="candidateEdit.addFile()">Add</button>
    </div>
    
    <div class="form-group">
        <label for="full_name">{{ 'full_name' | translate }}</label>    
        <input type="text" class="form-control" id="full_name" ng-model="candidateEdit.data.full_name">
    </div>
    <div class="form-group">
        <label for="nick_name">{{ 'nick_name' | translate }}</label>    
        <input type="text" class="form-control" id="nick_name" ng-model="candidateEdit.data.nick_name">
    </div>
    <div class="form-group">
        <label for="email">{{ 'email' | translate }}</label>    
        <input type="text" class="form-control" id="email" ng-model="candidateEdit.data.email">
    </div>

    <strong>programming_skill</strong><br>
    <div class="form-group"> 
        <div ng-repeat="item in candidateEdit.data.programming_skills_attributes"> 
          <div class="row" ng-hide="item._destroy">
            <input type="text" class="form-control" required id="skillname" ng-model="item.skill_name">	
            <select ng-model='item.skill_point' class="btn btn-grades" ng-options='point as point for point in candidateEdit.points'></select>
            <button type="button" class="btn btn-danger" ng-click="candidateEdit.removeCandidateProgrammingSkill($index)">Remove</button>
          </div>
        </div>
        <button type="button" ng-click="candidateEdit.addProgrammingskill()">Add</button>
    </div>

    <strong>soft_skill</strong><br>
    <div class="form-group"> 
        <div ng-repeat="item in candidateEdit.data.soft_skills_attributes"> 
          <div class="row" ng-hide="item._destroy">
            <input type="text" class="form-control" required id="skillname" ng-model="item.skill_name">	
            <select ng-model='item.skill_point' class="btn btn-grades" ng-options='point as point for point in candidateEdit.points'></select>
            <button type="button" class="btn btn-danger" ng-click="candidateEdit.removeCandidateSoftSkill($index)">Remove</button>
          </div>
        </div>
        <button type="button" ng-click="candidateEdit.addSoftskill()">Add</button>
    </div>

    <strong>design_skill</strong><br>
    <div class="form-group"> 
        <div ng-repeat="item in candidateEdit.data.design_skills_attributes"> 
          <div class="row" ng-hide="item._destroy">
            <input type="text" class="form-control" required id="skillname" ng-model="item.skill_name">
            <select ng-model='item.skill_point' class="btn btn-grades" ng-options='point as point for point in candidateEdit.points'></select>
            <button type="button" class="btn btn-danger" ng-click="candidateEdit.removeCandidateDesignSkill($index)">Remove</button>
          </div>
        </div>
        <button type="button" ng-click="candidateEdit.addDesignskill()">Add</button>
    </div>

    <button type="submit" class="btn btn-custom btn-green btn-block">Update</button>
  </form>
</div>
  


