(function() {
  'use strict';
  angular.module('somsri.somsri.candidateEdit', [])
  .controller('candidateEditCtrl', ['$scope', '$rootScope', 'candidateEditService', '$state', function($scope, $rootScope, candidateEditService, $state) {
    var ctrl = this;
    var imagefile;
    ctrl.points = Array.from(Array(21).keys())

    $rootScope.loadAndAuthorizeResource("candidateEdit", function(){
      candidateEditService.getCandidate($state.params.id).then(function(resp) {
        ctrl.data = resp;
      });

    ctrl.submit = function(params){
      ctrl.uploadPhoto(imagefile);
      candidateEditService.saveCandidate(ctrl.data.id, params).then(function(resp){
        window.location.reload()
      });
    };

    ctrl.uploadPhoto = function(imagefile) {
      candidateEditService.uploadImage(ctrl.data.id, imagefile)
    }


    ctrl.showImage = function(event, id){
      var img = URL.createObjectURL(event.target.files[0]);
      $('#' + id).attr('src', img);
      imagefile = event.target.files[0];
    }

    ctrl.addFile = function(){
      ctrl.data.candidate_files_attributes.push({ files_file_name: "" });
    }

    ctrl.onFileChange = function(index, event){
      ctrl.data.candidate_files_attributes[index].files = event.target.files[0]
    }

    ctrl.removeCandidateFiles = function(index) {
      if (ctrl.data.candidate_files_attributes[index].files) {
        ctrl.data.candidate_files_attributes.splice(index, 1);
      } else {
        ctrl.data.candidate_files_attributes[index]._destroy = true
      }
    }

    ctrl.removeCandidateProgrammingSkill = function(index) {
      ctrl.data.programming_skills_attributes[index]._destroy = true
    }

    ctrl.removeCandidateSoftSkill = function(index) {
      ctrl.data.soft_skills_attributes[index]._destroy = true
    }

    ctrl.removeCandidateDesignSkill = function(index) {
      ctrl.data.design_skills_attributes[index]._destroy = true
    }

    ctrl.addProgrammingskill = function(){
      ctrl.data.programming_skills_attributes.push({ skill_name: "", skill_point: 0 });
    }

    ctrl.addSoftskill = function(){
      ctrl.data.soft_skills_attributes.push({ skill_name: "", skill_point: 0 });
    }

    ctrl.addDesignskill = function(){
      ctrl.data.design_skills_attributes.push({ skill_name: "", skill_point: 0 });
    }
      });
    }]);
})();
