<div class="container-fluid blue-bg"style="margin-left:0px;">
  <div class="row-head-sp justify-content-between">
     <i class="fas fa-arrow-left employee-view-icon.active" ng-click="createCandidate.cancelSubmit()"></i> &nbsp; {{ 'Create New Candidate' | translate }}
  </div>
  <%= javascript_include_tag 'preview_image' %>
  <script src="https://kit.fontawesome.com/1ffa964d13.js"></script>


<style>
.label{
  color: #337ab7;
  padding: 8px;
}
</style>

  <div class="content-scout" style="padding:15px">
  <form name="createCandidateForm" ng-submit="createCandidate.submit(createCandidate.datas)">
    <!-- Profile Img/ From / Btn -->
    <div class="row">
    
      <!-- Profile Img -->
      <div class="col-md-2"style="padding-left:20px">
        <div class="col-md-12">
          <label>{{ 'picture' | translate }}</label>
        </div>

        <div class="col-md-12">
          <div class="img-profile cursor-pointer" id="image" ngf-select="createCandidate.showImage($event, 'pic')">
            <img src="{{ createCandidate.datas.candidate.image_url }}" id="pic" class="">
          </div>
          <!-- MultipleFiles -->
          <div class="row" style="padding-top:25px;margin:0px">
            <div ng-repeat="item in createCandidate.datas.candidate.candidate_files_attributes">
              <div ng-hide="item._destroy">
                <div style="padding:2px;">  
                  <span ng-hide="!item.files_file_name.name">{{ item.files.name }}</span>
                </div>
                <div style="padding:2px;">
                  <a ng-show="!item.files_file_name.name" target="_blank" href="{{ createCandidate.datas.candidate.candidate_files_url[$index] }}">{{ item.files_file_name }}</a>
                </div> 
              <div class="button btn btn-info" ngf-select="createCandidate.onFileChange($index, $event)" ng-model="item.files_file_name" name="file">+</div>   
                <button type="button" class="close" aria-label="Close" ng-click="createCandidate.removeCandidateFiles($index)"><span aria-hidden="true">&times;</span></button>
              </div>
            </div>
          </div>
          <div style="padding:2px;">
          <button type="button" class="btn btn-skill" ng-click="createCandidate.addFile()">+File</button>
          </div>
    </div>
    </div><br>

      <!-- From info -->
      <div class="col-md-5">
      
        <!-- Name/NickName -->
        <div class="row">
          <div class="col-md-8" style="padding-left:0px; padding-rigth:0px;">
            <div class="form-group">
              <label>{{ 'nameE' | translate }}</label>
              <div class="col-md-12">
                <input type="text" class="form-control text-blue" id="full_name" ng-keyup="createCandidate.isNotBlank()" ng-model="createCandidate.datas.candidate.full_name">
              </div>
            </div>
          </div>
          <div class="col-md-4" style="padding-left:0px; padding-rigth:0px;">
            <div class="form-group">
              <label>{{ 'nicknameE'  | translate}}</label>
              <div class="col-md-12">
                <input type="text" class="form-control text-blue" id="nick_name" ng-keyup="createCandidate.isNotBlank()" ng-model="createCandidate.datas.candidate.nick_name">
              </div>
            </div>
          </div>
        </div>

        <!-- Email/Mobile -->
        <div class="row">
          <div class="col-md-8" style="padding-left:0px; padding-rigth:0px;">
              <div class="form-group">
                <label>{{ 'email'  | translate}}</label>
                <div class="col-md-12">
                  <input type="text" class="form-control text-blue" id="email" ng-keyup="createCandidate.isNotBlank()" ng-model="createCandidate.datas.candidate.email">
                </div>
              </div>
            </div>
            <div class="col-md-4" style="padding-left:0px; padding-rigth:0px;">
              <div class="form-group">
                <label>{{ 'phone'  | translate}}</label>
                <div class="col-md-12">
                  <input type="text" class="form-control text-blue" id="phone" ng-keyup="createCandidate.isNotBlank()" ng-model="createCandidate.datas.candidate.phone">
                </div>
              </div>
            </div>
        </div>

        <!-- From/Year -->
        <div class="row">
          <div class="col-md-8" style="padding-left:0px; padding-rigth:0px;">
            <div class="form-group">
              <label>{{ 'from'  | translate}}</label>
              <div class="col-md-12">
                <input type="text" class="form-control text-blue" id="from" ng-keyup="createCandidate.isNotBlank()" ng-model="createCandidate.datas.candidate.from">
              </div>
            </div>
          </div>
          <div class="col-md-4" style="padding-left:0px; padding-rigth:0px;">
            <div class="form-group">
              <label>{{ 'school_year'  | translate}}</label>
              <div class="col-md-12">
                <input type="text" class="form-control text-blue" id="school_year" ng-keyup="createCandidate.isNotBlank()" ng-model="createCandidate.datas.candidate.school_year">
              </div>
            </div>
          </div>

        </div>

        <!-- Current Ability/Learn Ability/Attention Ability -->
        <div class="row">
          <div class="col-md-4" style="padding-left:0px; padding-rigth:0px;">
            <div class="form-group">
              <label>{{ 'CurrentAbility'  | translate}}</label>
              <div class="col-md-12" style="padding-left:0px; padding-rigth:0px;">
                <select class="form-control text-blue somsri-select" id="current_ability" ng-options='point as point for point in createCandidate.points' ng-model="createCandidate.datas.candidate.current_ability">
                </select>
              </div>
            </div>
          </div>
          <div class="col-md-4" style="padding-left:0px; padding-rigth:0px;">
            <div class="form-group">
              <label>{{ 'LearnAbility'  | translate}}</label>
              <div class="col-md-12" style="padding-left:0px; padding-rigth:0px;">
                <select class="form-control text-blue somsri-select" id="learn_ability" ng-options='point as point for point in createCandidate.points' ng-model="createCandidate.datas.candidate.learn_ability">
                </select>
              </div>
            </div>
          </div>
          <div class="col-md-4" style="padding-left:0px; padding-rigth:0px;">
            <div class="form-group">
              <label>{{ 'AttentionAbility'  | translate}}</label>
              <div class="col-md-12" style="padding-left:0px; padding-rigth:0px;">
                <select class="form-control text-blue somsri-select" id="attention" 
                        ng-model="createCandidate.datas.candidate.attention"
                        ng-options='point as point for point in createCandidate.points'>
                </select>
              </div>
            </div>
          </div>

        </div>

        <!-- Interest -->
        <div class="row">
          <div class="col-md-8" style="padding-left:0px; padding-rigth:0px;">
            <div class="form-group">
              <label>{{ 'Interest'  | translate}}</label>
              <div class="col-md-12" style="padding-left:0px; padding-rigth:0px;">
                <input type="text" class="form-control text-blue" id="interest" ng-model="createCandidate.datas.candidate.interest">
              </div>
            </div>
          </div>
        </div>

      </div>

      <!-- Btn -->
      <div class="col-md-5">
        <div class="form-group somsri-invoice" style="margin-top: 25px; text-align:right">
          <button type="submit" class ="btn btn-submit2" ng-disabled="createCandidate.cannotSubmit"><i class="fas fa-file-import"></i>&nbsp;{{ 'Create' | translate }}</button><br><br>
          <button type="button" class ="btn btn-cancel2" ng-click="createCandidate.cancelSubmit()"><i class="fas fa-trash-alt"></i>&nbsp;{{ 'Cancel' | translate }}</button>
        </div>
      </div>

    </div>

    <!-- Skill / Note -->
    <div class="row" style="padding-top:35px" >

      <!-- Skill -->
      <div class="col-md-7">
        <div class="row"style="margin:0px">

          <!--ProgramSkill -->
          <div class="col-md-6">  
            <div class="form-group" style="padding-left:20px;margin:0px">
              <div class="row-head" style="border-bottom: 1px solid #ddd;padding-bottom:10px;margin:0px">
                {{ 'Programing Skill'  | translate }}
              </div>

              <div class="form-group"> 
                <div ng-repeat="item in createCandidate.datas.candidate.programming_skills_attributes"> 
                  <div class="row" ng-hide="item._destroy">
                    <input type="text" class="form-control" required id="skillname" ng-model="item.skill_name">	
                    <select ng-model='item.skill_point' class="btn btn-grades" ng-options='point as point for point in createCandidate.points'></select>
                    <button type="button" class="btn btn-danger" ng-click="createCandidate.removeCandidateProgrammingSkill($index)">Remove</button>
                  </div>
                </div>
                <button type="button" ng-click="createCandidate.addProgrammingskill()">Add</button>
              </div>
        

            </div>
          </div>

          <!--Soft/Design Skill -->
          <div class="col-md-6" style="padding-right:0px;">
            <div class="form-group" style="margin:0px">

              <!--Soft Skill -->
              <div class="row-head" style="border-bottom: 1px solid #ddd;padding-bottom:10px;margin:0px">
                {{ 'Soft Skill'  | translate }}
              </div>

              <div class="form-group"> 
                <div ng-repeat="item in createCandidate.datas.candidate.soft_skills_attributes"> 
                  <div class="row" ng-hide="item._destroy">
                    <input type="text" class="form-control" required id="skillname" ng-model="item.skill_name">	
                    <select ng-model='item.skill_point' class="btn btn-grades" ng-options='point as point for point in createCandidate.points'></select>
                    <button type="button" class="btn btn-danger" ng-click="createCandidate.removeCandidateSoftSkill($index)">Remove</button>
                  </div>
                </div>
                <button type="button" ng-click="createCandidate.addSoftskill()">Add</button>
              </div>

              
              <!--Design Skill -->
              <div class="row-head" style="border-bottom: 1px solid #ddd;padding-bottom:10px;padding-top:35px;margin:0px">
                {{ 'Design Skill'  | translate }}
              </div>

              <div class="form-group">
                <div ng-repeat="item in createCandidate.datas.candidate.design_skills_attributes"> 
                  <div class="row" ng-hide="item._destroy">
                    <input type="text" class="form-control" required id="skillname" ng-model="item.skill_name">	
                    <select ng-model='item.skill_point' class="btn btn-grades" ng-options='point as point for point in createCandidate.points'></select>
                    <button type="button" class="btn btn-danger" ng-click="createCandidate.removeCandidateDesignSkill($index)">Remove</button>
                  </div>
                </div>
                <button type="button" ng-click="createCandidate.addDesignskill()">Add</button>
              </div>

              

            </div>
          </div>

    
        </div>
      </div>

      <!-- Note -->
      <div class="col-md-5">
        <div class="form-group"style="margin:0px">
          <div class="row-head" style="border-bottom: 1px solid #ddd;padding-bottom:10px;;margin:0px">
            {{ 'NoteE'  | translate }}
          </div>
          <div class="row" style="padding-top:25px;margin:0px">
            <textarea class="form-control" style="border:solid 1px #ddd;" rows="30" id="note" ng-model="createCandidate.datas.candidate.note"></textarea>
          </div>
        </div>
      </div>
    </div>
  </form>
  </div>
  </div>